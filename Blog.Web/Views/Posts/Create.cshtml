@model Post

<h4>Criando um novo Post do Blog</h4>

<div class="row" style="margin-bottom:20px">
    <div class="col-md-10"> 
        <form asp-action="Create">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="Title">Título do Post</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="Content">Conteúdo do Post</label>
                <textarea asp-for="Content" class="form-control" rows="20" cols="150"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <input type="submit" name="Enviar" value="Enviar" class="btn btn-info" />
            <a asp-action="Index" class="btn btn-warning">Voltar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
